<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ding.hyld.mapper.ChatFileMapper">
    <resultMap id="resultMap" type="com.ding.hyld.entity.ChatFile">
        <id column="id" property="id"/>

        <id column="sender" property="sender"/>
        <id column="recipient" property="recipient"/>
        <id column="originalName" property="originalName"/>
        <id column="linkName" property="linkName"/>
        <id column="status" property="status"/>

        <id column="createTime" property="createTime"/>
        <id column="note" property="note"/>
    </resultMap>
    <resultMap id="resultInfoMap" type="com.ding.hyld.info.ChatFileInfo">
        <id column="id" property="id"/>

        <id column="sender" property="sender"/>
        <id column="recipient" property="recipient"/>
        <id column="originalName" property="originalName"/>
        <id column="linkName" property="linkName"/>

        <id column="createTime" property="createTime"/>
        <id column="note" property="note"/>

        <association column="status" property="status" select="com.ding.hyld.mapper.DictionaryMapper.findById"/>
    </resultMap>
    <insert id="add" parameterType="com.ding.hyld.vo.ChatFileVo" useGeneratedKeys="true" keyProperty="id">
        insert into chat_file(sender,recipient,status,originalName,linkName,note)
        values(#{chatFileVo.sender},
               #{chatFileVo.recipient},
               #{chatFileVo.status},
               #{chatFileVo.originalName},
               #{chatFileVo.linkName},
               #{chatFileVo.note})
    </insert>
    <select id="searchChatFile" resultMap="resultInfoMap">
        select * from chat_file
        <where>
            <if test="chatFileVo.id != null">
                and id = #{chatFileVo.id}
            </if>
        </where>
    </select>
    <update id="delete">
        update chat_file
        set status = #{chatFileVo.status}
        where id = #{chatFileVo.id}
    </update>
</mapper>